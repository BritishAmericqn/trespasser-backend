# ===== FUNCTIONS FOR COMPLEX OPERATIONS =====

# Start complete development environment
tdev-full() {
    echo "ðŸš€ Starting Trespasser Development Environment..."
    
    # Check and start PostgreSQL
    if ! pgrep -x "postgres" > /dev/null; then
        echo "ðŸ—„ï¸ Starting PostgreSQL..."
        brew services start postgresql@14
    fi
    
    # Check and start Redis
    if ! pgrep -x "redis-server" > /dev/null; then
        echo "ðŸ“¦ Starting Redis..."
        brew services start redis
    fi
    
    # Navigate to project
    cd /Users/benjaminroyston/trespasser-backend
    
    # Install dependencies if needed
    if [ ! -d "node_modules" ]; then
        echo "ðŸ“¦ Installing dependencies..."
        npm install
    fi
    
    echo "ðŸŽ® Starting Trespasser backend..."
    npm run dev
}

# Monitor all systems
tmonitor() {
    echo "ðŸ“Š Trespasser System Monitor"
    echo "==========================="
    
    # System performance
    echo "ðŸ–¥ï¸ System Performance:"
    glances --time 1 --quiet &
    GLANCES_PID=$!
    
    # Network monitoring if available
    if command -v bandwhich &> /dev/null; then
        echo "ðŸŒ Network Usage:"
        bandwhich &
        BANDWHICH_PID=$!
    fi
    
    # Container monitoring if Docker is running
    if command -v docker &> /dev/null && docker info > /dev/null 2>&1; then
        echo "ðŸ³ Container Performance:"
        watch docker stats &
        DOCKER_PID=$!
    fi
    
    # Cleanup on exit
    cleanup() {
        echo "ðŸ§¹ Cleaning up monitoring processes..."
        [ ! -z "$GLANCES_PID" ] && kill $GLANCES_PID 2>/dev/null
        [ ! -z "$BANDWHICH_PID" ] && kill $BANDWHICH_PID 2>/dev/null
        [ ! -z "$DOCKER_PID" ] && kill $DOCKER_PID 2>/dev/null
    }
    
    trap cleanup EXIT
    
    echo "Press Ctrl+C to stop monitoring..."
    wait
}

# Load test with custom scenarios
tload-test() {
    local scenario=${1:-"basic"}
    echo "ðŸ”¥ Running load test: $scenario"
    
    case $scenario in
        "basic")
            artillery run tests/artillery-basic.yml
            ;;
        "stress")
            artillery run tests/artillery-stress.yml
            ;;
        "spike")
            artillery run tests/artillery-spike.yml
            ;;
        *)
            echo "Available scenarios: basic, stress, spike"
            ;;
    esac
}

# Database operations
tdb-reset() {
    echo "âš ï¸ Resetting Trespasser database..."
    read "?Are you sure? (y/N): " confirm
    if [[ $confirm == [yY] ]]; then
        dropdb trespasser_dev 2>/dev/null || true
        createdb trespasser_dev
        echo "âœ… Database reset complete"
    else
        echo "âŒ Database reset cancelled"
    fi
}

# Security scan
tsecurity() {
    echo "ðŸ”’ Trespasser Security Scan"
    echo "========================="
    
    echo "ðŸ“‹ NPM Security Audit:"
    npm audit
    
    echo "ðŸ” Dependency vulnerabilities:"
    if command -v npm-check &> /dev/null; then
        npm-check
    else
        npm outdated
    fi
}

# Project info
tinfo() {
    echo "ðŸ“Š Trespasser Project Information"
    echo "================================"
    echo "ðŸ“ Project Path: $(pwd)"
    echo "ðŸ“¦ Node Version: $(node --version)"
    echo "ðŸ“‹ NPM Version: $(npm --version)"
    echo "ðŸ—„ï¸ PostgreSQL Status: $(brew services list | grep postgresql@14 | awk '{print $2}')"
    echo "ðŸ“¦ Redis Status: $(brew services list | grep redis | awk '{print $2}')"
    echo "ðŸ³ Docker Status: $(docker info > /dev/null 2>&1 && echo 'Running' || echo 'Not running')"
    echo "ðŸ”§ Git Branch: $(git branch --show-current 2>/dev/null || echo 'Not a git repo')"
    echo "ðŸ“ˆ Git Status: $(git status --porcelain | wc -l | xargs echo) files changed"
}

# Quick commit and push
tquick() {
    local message=${1:-"Quick update"}
    echo "âš¡ Quick commit: $message"
    git add .
    git commit -m "$message"
    git push
}

